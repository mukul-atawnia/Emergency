<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/distress"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:id="@+id/image_distress"
        android:onClick="distressFunction"
        android:layout_marginTop="25dp"

        />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="90dp"
        android:onClick="counsellingFunction"
        android:id="@+id/image_counselling"
        android:src="@drawable/counseliing"
        />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:id="@+id/image_shelter"
        android:layout_marginTop="10dp"
        android:src="@drawable/shelter"
        android:onClick="shelterFunction"
        android:layout_below="@id/image_distress"
        />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/legalaid"
        android:onClick="legalFunction"
        android:id="@+id/image_legal"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/image_counselling"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Any One"
        android:textAppearance="?android:textAppearanceLarge"
        android:textSize="25dp"
        android:layout_below="@+id/image_legal"
        android:layout_marginTop="10dp"
        android:gravity="center"
        />

</RelativeLayout>