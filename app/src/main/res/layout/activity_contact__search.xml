<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mukulatawnia.emergency2.Contact_Search">


    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/search_name"
        android:hint="Search Name"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        />

    <Button
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:text="Search"
        android:layout_toRightOf="@+id/search_name"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:onClick="searchContact"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/search_name"
        android:id="@+id/display_email"
        android:layout_marginLeft="10dp"
        android:text="Email Here"
        android:textAppearance="?android:textAppearanceLarge"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/display_email"
        android:id="@+id/display_mob"
        android:layout_marginLeft="10dp"
        android:text="Mobile"
        android:textAppearance="?android:textAppearanceLarge"
        />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/delete_contact"
        android:layout_marginTop="29dp"
        android:gravity="center"
        android:layout_below="@+id/display_mob"
        android:layout_marginLeft="120dp"
        android:text="Delete"
        android:textAppearance="?android:textAppearanceLarge"
        android:onClick="deleteContact"
        />

</RelativeLayout>
